# Stall Reservation System - Docker Environment Variables
# Copy this file to .env and customize as needed

# ============================================
# MySQL Configuration
# ============================================
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=reservation_db
MYSQL_USER=appuser
MYSQL_PASSWORD=apppassword
MYSQL_PORT=3306

# ============================================
# MongoDB Configuration
# ============================================
# Profile MongoDB
MONGO_PROFILE_PORT=27017
MONGO_PROFILE_DB=profile_db

# Stall MongoDB
MONGO_STALL_PORT=27018
MONGO_STALL_DB=stall_db

# ============================================
# Backend Services Configuration
# ============================================
# Auth Service
AUTH_SERVICE_PORT=8080
AUTH_SERVICE_JAVA_OPTS=-Xmx512m

# Profile Management Service
PROFILE_SERVICE_PORT=8081
PROFILE_SERVICE_JAVA_OPTS=-Xmx512m

# Stall Management Service
STALL_SERVICE_PORT=8082
STALL_SERVICE_JAVA_OPTS=-Xmx512m

# Reservation Management Service
RESERVATION_SERVICE_PORT=8083
RESERVATION_SERVICE_JAVA_OPTS=-Xmx512m

# ============================================
# Frontend Configuration
# ============================================
# Admin Frontend
ADMIN_FRONTEND_PORT=3001
VITE_API_URL=http://localhost:8080

# Client Frontend
CLIENT_FRONTEND_PORT=3000
CLIENT_VITE_API_URL=http://localhost:8083

# ============================================
# Application Configuration
# ============================================
# Environment (development, production)
NODE_ENV=development
SPRING_PROFILES_ACTIVE=docker

# JWT Secret (change this in production!)
JWT_SECRET=your-secret-key-change-in-production

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
SPRING_JPA_SHOW_SQL=false
